<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Admin</title>
    <link rel="stylesheet" type="text/css" href="styles.css">
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        table, th, td {
            border: 1px solid #ddd;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <header>
        
        <h1>Your Header</h1>
        <div class="menu">
            <ul class="menu-list">
                <li><a href="/">Home Page</a></li>
                <li class="dropdown">
                    <a href="#">Contact Us</a>
                    <ul class="dropdown-menu">
                        <li><a href="/contact">Email</a></li>
                        <li><a href="/contact">Phone</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </header>

    <main>
        <section>
            <button id="getPendingRequests">Get Pending Requests</button>
            <div id="tableContainer">
                <!-- The table will be inserted here -->
                
            </div>
        </section>
        <form id="addAdminForm" action="/Admin/addAdmin" method="POST">
            <label for="email">Email:</label>
            <input type="email" name="email" id="email" placeholder="Enter Email">
        
            <label for="firstName">First Name:</label>
            <input type="text" name="firstName" id="firstName" placeholder="Enter First Name">
        
            <label for="lastName">Last Name:</label>
            <input type="text" name="lastName" id="lastName" placeholder="Enter Last Name">
        
            <button type="button" onclick="addAdmin()">Add Admin</button>
        </form>
        
        <div id="adminInfo" style="display: none;">
            <p>Randomly Generated Admin:</p>
            <p>Email: <span id="emailDisplay"></span></p>
            <p>First Name: <span id="firstNameDisplay"></span></p>
            <p>Last Name: <span id="lastNameDisplay"></span></p>
            <p>Username: <span id="username"></span></p>
            <p>Password: <span id="password"></span></p>
        </div>
    </main>

    <footer>
        &copy; 2023 Your Company Name
    </footer>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const getPendingRequestsButton = document.getElementById("getPendingRequests");
            const tableContainer = document.getElementById("tableContainer");
            console.log("shjcbewjenc");
        
            getPendingRequestsButton.addEventListener("click", function () {
                fetch("http://localhost:5000/Admin/getPendingPharma")
                    .then(response => response.json())
                    .then(data => {
                        // Create a table and populate it with data
                        const table = document.createElement("table");
                     //  console.log(response);
                        table.innerHTML = `
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Description</th>
                            </tr>
                        `;
                        const row = table.insertRow();
                        
                            row.insertCell(0).textContent = "first name";
                            row.insertCell(1).textContent = "last name";
                            row.insertCell(2).textContent = "affiliation";
                            row.insertCell(3).textContent = "rate";
                            row.insertCell(4).textContent = "username";
                            row.insertCell(5).textContent = "password";
                            row.insertCell(6).textContent = "status";
                            row.insertCell(7).textContent = "education";
                            tableContainer.appendChild(row);

                        data.forEach(item => {
                            const row = table.insertRow();
                            row.insertCell(0).textContent = item.firstName;
                            row.insertCell(1).textContent = item.lastName;
                            row.insertCell(2).textContent = item.affiliation;
                            row.insertCell(3).textContent = item.rate;
                            row.insertCell(4).textContent = item.username;
                            row.insertCell(5).textContent = item.password;
                            row.insertCell(6).textContent = item.status;
                            row.insertCell(7).textContent = item.education;
                            
                            tableContainer.appendChild(row);
                        });
                        
                        // Replace the existing table with the new one
                        //tableContainer.innerHTML = "";
                    })
                    .catch(error => console.error("Error fetching data: ", error));
            });
        });
        

        function addAdmin() {
    const email = document.getElementById("email").value;
    const firstName = document.getElementById("firstName").value;
    const lastName = document.getElementById("lastName").value;

    fetch("/Admin/addAdmin", {
        method: "POST",
        headers: {
            "Content-Type": "application/json",
        },
        body: JSON.stringify({ email, firstName, lastName }),
    })
    .then(response => response.json())
    .then(data => {
        // Display the randomly generated username and password
        const emailDisplay = document.getElementById("emailDisplay");
        const firstNameDisplay = document.getElementById("firstNameDisplay");
        const lastNameDisplay = document.getElementById("lastNameDisplay");
        const username = document.getElementById("username");
        const password = document.getElementById("password");

        emailDisplay.textContent = data.email;
        firstNameDisplay.textContent = data.firstName;
        lastNameDisplay.textContent = data.lastName;
        username.textContent = data.username;
        password.textContent = data.password;

        // Show the admin info
        const adminInfo = document.getElementById("adminInfo");
        adminInfo.style.display = "block";
    })
    .catch(error => {
        // Handle errors here, e.g., display an error message
        console.error(error);
    });
}
        
        </script>
</body>

</html>