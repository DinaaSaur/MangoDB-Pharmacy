<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <header>
        <h1>Patient Home</h1>
        <div class="menu">
            <ul class="menu-list">
                <li><a href="/Patient/viewMed">View Medications</a></li>
                <li><a href="/Patient/query">Search</a></li>
            </ul>
        </div>
    </header>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const menuLinks = document.querySelectorAll(".menu-list a");

            menuLinks.forEach(link => {
                link.addEventListener("click", function (event) {
                    event.preventDefault(); // Prevent the default behavior of clicking a link
                    const targetUrl = this.getAttribute("href");
                    window.location.href = targetUrl; // Redirect to the target URL
                });
            });
        });
    </script>
</body>
</html>